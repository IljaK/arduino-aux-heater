{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "Build tests",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "linux": {
                "command": "/usr/bin/g++",
                "args": [
                    "-g",
                    "-ggdb",
                    "-D", "_LINUX_",
                    "-D", "ARDUINO_TEST",
                    "-I", "${workspaceFolder}/aux-heater-test/src",
                    "-I", "${workspaceFolder}/arduino-stub",
                    "-I", "${workspaceFolder}/aux-heater/src",
                    "-I", "${workspaceFolder}/aux-heater/src/common",
                    "-I", "${workspaceFolder}/aux-heater/src/serial",

                    "${workspaceFolder}/aux-heater/src/*.cpp",
                    "${workspaceFolder}/aux-heater/src/common/*.cpp",
                    "${workspaceFolder}/aux-heater/src/serial/*.cpp",
                    "${workspaceFolder}/arduino-stub/*.cpp",
                    "${workspaceFolder}/aux-heater-test/src/*.cpp",
                    "${workspaceFolder}/aux-heater-test/src/mock/*.cpp",
                    "${workspaceFolder}/aux-heater-test/app/*.cpp",

                    "-l", "gtest",
                    "-l", "gtest_main",
                    "-l", "pthread",
                    
                    "-o", "${workspaceFolder}/aux-heater-test/build/test_app"
                ],
                "options": {
                    "cwd": "/usr/bin"
                }
            },
            "windows": {
                "command": "msbuild",
                "args": [
                    "/Zi",
                    "/EHsc",

                    "/I", "${workspaceFolder}\\aux-heater-test\\src",
                    "/I", "${workspaceFolder}\\arduino-stub",
                    "/I", "${workspaceFolder}\\aux-heater\\src",
                    "/I", "${workspaceFolder}\\aux-heater\\src\\common",
                    "/I", "${workspaceFolder}\\aux-heater\\src\\serial",

                    "${workspaceFolder}\\aux-heater\\src\\*.cpp",
                    "${workspaceFolder}\\aux-heater\\src\\common\\*.cpp",
                    "${workspaceFolder}\\aux-heater\\src\\serial\\*.cpp",
                    "${workspaceFolder}\\arduino-stub\\*.cpp",
                    "${workspaceFolder}\\aux-heater-test\\src\\*.cpp",
                    "${workspaceFolder}\\aux-heater-test\\src\\mock\\*.cpp",
                    "${workspaceFolder}\\aux-heater-test\\app\\*.cpp",

                    "/Fe:${workspaceFolder}\\aux-heater-test\\build\\test_app.exe"
                ],
                "problemMatcher": ["$msCompile"],
                "group": {
                    "kind": "build",
                    "isDefault": true
                }
            }
        }
    ]
}