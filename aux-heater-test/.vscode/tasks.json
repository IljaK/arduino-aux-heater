{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "Build tests",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "linux": {
                "command": "/usr/bin/g++",
                "args": [
                    "-g",
                    "-ggdb",
                    "-D", "_LINUX_",
                    "-D", "ARDUINO_TEST",
                    "-I", "${workspaceFolder}/src",
                    "-I", "${workspaceFolder}/../arduino-stub",
                    "-I", "${workspaceFolder}/../aux-heater",

                    "${workspaceFolder}/../aux-heater/*.cpp",
                    "${workspaceFolder}/../arduino-stub/*.cpp",
                    "${workspaceFolder}/src/*.cpp",
                    "${workspaceFolder}/app/*.cpp",

                    "-l", "gtest",
                    "-l", "gtest_main",
                    "-l", "pthread",
                    
                    "-o", "${workspaceFolder}/build/test_app"
                ],
                "options": {
                    "cwd": "/usr/bin"
                }
            },
            "windows": {
                "command": "cl.exe",
                "args": [
                    "/Zi",
                    "/EHsc",
                    "/Fe:", "${workspaceFolder}/build/test_app.exe",
                    "${workspaceFolder}/../aux-heater/*.cpp",
                    "${workspaceFolder}/../arduino-stub/*.cpp",
                    "${workspaceFolder}/src/*.cpp",
                    "${workspaceFolder}/app/*.cpp"
                ],
                "problemMatcher": ["$msCompile"],
                "group": {
                    "kind": "build",
                    "isDefault": true
                }
            }
        }
    ]
}